<h1>Listing musics</h1>

<table>
  <tr>
  	<th>Num</th>
    <th>File name</th>
    <th>File path</th>
    <th>Duration</th>
    <th>Work</th>
    
    <th></th>
  </tr>

<%# @musics.each do |music| %>
<% @musics.each_with_index do |music, i| %>
  <tr>
  	<td class="col_center"><%= i + 1 %></td>
    <td><%= link_to music.file_name, music %></td>
    <td><%= music.file_path %></td>
    <td><%= music.duration %></td>
    
    <td>
    	<% if music.work_id != nil %>
    		<%= music.work_id %>
		<% else %>
			No data
		<% end %>
	</td>
    
    <td><%= link_to 'Destroy', music, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

